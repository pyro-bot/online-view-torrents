{
    "manifest_version": 2,
    "name": "Простой перевод",
    "version": "1.0",
    "icons": {
        "16": "16x16.png",
        "48": "16x16.png"
    },
    "permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "/js/test.js"
            ]
        }
    ],
    "browser_action": {
        "default_title": "Открыть переводчик",
        "default_icon": "16x16.png",
        "default_popup": "html/index.html"
    }
}